"use strict";window.addEventListener("DOMContentLoaded",function(){var a=document.querySelector(".site-header"),e=document.querySelector(".site-main"),f=a.offsetHeight,b,c;function d(){var b=Math.abs(e.getBoundingClientRect().top);b>f/3?a.classList.add("site-header--dark"):a.classList.remove("site-header--dark")}d(),document.addEventListener("scroll",_.throttle(d,200,{leading:!0})),b=document.querySelector(".site-nav"),c=document.querySelector(".mobile-menu-toggle"),c.addEventListener("click",function(){b.classList.toggle("collapsed")}),document.body.addEventListener("click",function(a){a.target!==c&&!b.classList.contains("collapsed")&&b.classList.add("collapsed")})})