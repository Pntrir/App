"use strict";document.addEventListener("DOMContentLoaded",function(){var c=window.AccordionAlt||window.Accordion,d=document.querySelectorAll(".accordion-faq"),b,a;forEach(d,function(e){var b=new c(e),a,d;b.closeAll(),a=location.hash,d=a&&document.querySelector(a),a&&!/fn:/.test(a)&&d.classList.contains("accordion__item")&&b.openItem(d)}),b=document.querySelectorAll(".accordion__item-heading");for(a=0;a<b.length;a++)b[a].addEventListener('click',function(b){var a=b.target.closest(".accordion__item").id;a&&(history.pushState?history.pushState(null,null,'#'+a):location.hash='#'+a)})})